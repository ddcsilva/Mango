@model LoginRequestDTO

<form asp-action="Login" method="post">
    <div class="container border p-4">
        <h2 class="text-center mb-4">Entrar</h2>

        <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

        <div class="row">
            <div class="col-md-6 offset-md-3 col-12 pb-3">
                <input asp-for="UserName" class="form-control" placeholder="Usuário" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6 offset-md-3 col-12 pb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Senha" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-md-6 offset-md-3 col-12">
                <button type="submit" class="btn btn-success w-100">Entrar</button>
            </div>
        </div>
    </div>
</form>
